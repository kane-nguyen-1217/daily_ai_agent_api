# =============================================================================
# Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_NAME=daily_ai_agent_api_development
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_PORT=5432

# Rails Configuration
RAILS_ENV=development
RACK_ENV=development
RAILS_MAX_THREADS=5
SECRET_KEY_BASE=development_secret_key_base_replace_in_production

# JWT Configuration
JWT_SECRET_KEY=development_jwt_secret_key_change_in_production
JWT_EXPIRATION_TIME=24.hours

# Lockbox Encryption
LOCKBOX_MASTER_KEY=generate_32_byte_hex_key_with_rails_credentials_edit

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
SIDEKIQ_REDIS_URL=redis://localhost:6379/1

# API Configuration
API_HOST=localhost
API_PORT=3000
ALLOWED_HOSTS=localhost,127.0.0.1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# OAuth Configuration - Google
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/api/v1/oauth_tokens/google/callback

# OAuth Configuration - Microsoft
MICROSOFT_CLIENT_ID=your_microsoft_oauth_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_oauth_client_secret

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# N8N Integration
N8N_URL=http://localhost:5678
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=your_n8n_api_key
N8N_WEBHOOK_SECRET=your_n8n_webhook_secret

# Crypto Data API
CRYPTO_API_URL=https://api.coingecko.com/api/v3
CRYPTO_API_KEY=your_crypto_api_key

# AI/OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo

# Development Settings
LOG_LEVEL=debug
RAILS_LOG_TO_STDOUT=true
FORCE_SSL=false

# Performance
WEB_CONCURRENCY=1

# Sidekiq Configuration
SIDEKIQ_CONCURRENCY=2
SIDEKIQ_QUEUES=default,mailers,ai_processing,calendar_sync

# Frontend Configuration
FRONTEND_URL=http://localhost:3001

# Calendar OAuth - Microsoft
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:3001
