# =============================================================================
# Production Environment Variables
# =============================================================================
# Copy this file to .env on your production server

# Database Configuration
DB_HOST=localhost
DB_NAME=daily_ai_agent_api_production
DB_USERNAME=daily_ai_agent_user
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
DB_PORT=5432

# Rails Configuration
RAILS_ENV=production
RACK_ENV=production
RAILS_MAX_THREADS=10
SECRET_KEY_BASE=GENERATE_64_CHARACTER_SECRET_KEY
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_TO_STDOUT=true

# JWT Configuration
JWT_SECRET_KEY=GENERATE_SECURE_JWT_SECRET
JWT_EXPIRATION_TIME=24.hours

# Lockbox Encryption
LOCKBOX_MASTER_KEY=GENERATE_64_CHARACTER_HEX_KEY

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
SIDEKIQ_REDIS_URL=redis://localhost:6379/1

# API Configuration
API_HOST=yourdomain.com
API_PORT=3000
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# External Services
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook
N8N_API_KEY=your_production_n8n_api_key
N8N_WEBHOOK_SECRET=your_production_webhook_secret
TELEGRAM_BOT_TOKEN=your_production_telegram_bot_token

# AI Service Configuration
OPENAI_API_KEY=your_production_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo

# Calendar Integration OAuth (Production Apps)
GOOGLE_CLIENT_ID=your_production_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_production_google_oauth_client_secret
MICROSOFT_CLIENT_ID=your_production_microsoft_oauth_client_id
MICROSOFT_CLIENT_SECRET=your_production_microsoft_oauth_client_secret

# Crypto APIs
CRYPTO_API_KEY=your_production_crypto_api_key
CRYPTO_API_URL=https://api.coingecko.com/api/v3

# Production Settings
LOG_LEVEL=info
FORCE_SSL=true

# Performance
WEB_CONCURRENCY=2
SIDEKIQ_CONCURRENCY=5
SIDEKIQ_QUEUES=default,mailers,ai_processing,calendar_sync

# Frontend Configuration
FRONTEND_URL=https://yourdomain.com

# Email Configuration (if using ActionMailer)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_DOMAIN=yourdomain.com

# Monitoring & Error Tracking (Optional)
SENTRY_DSN=your_sentry_dsn_if_using_sentry
NEW_RELIC_LICENSE_KEY=your_new_relic_key_if_using_new_relic
