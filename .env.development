# =============================================================================
# Development Environment Variables Template
# =============================================================================
# Copy this file to .env.development and fill in your values

# Database Configuration
POSTGRES_DB=daily_ai_agent_development
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Rails Configuration
RAILS_ENV=development
RACK_ENV=development
SECRET_KEY_BASE=development_secret_key_base_replace_in_production

# Redis Configuration
REDIS_URL=redis://redis:6379/0
SIDEKIQ_REDIS_URL=redis://redis:6379/1

# API Configuration
API_HOST=localhost
API_PORT=3000
ALLOWED_HOSTS=localhost,127.0.0.1

# JWT Configuration
JWT_SECRET_KEY=development_jwt_secret_key
JWT_EXPIRATION_TIME=24.hours

# External Services (use test/development keys)
N8N_WEBHOOK_URL=http://localhost:5678/webhook
TELEGRAM_BOT_TOKEN=your_development_telegram_bot_token

# AI Service Configuration (use test keys)
OPENAI_API_KEY=your_development_openai_api_key
AI_MODEL=gpt-3.5-turbo

# Calendar Integration (use development OAuth apps)
GOOGLE_CLIENT_ID=your_development_google_client_id
GOOGLE_CLIENT_SECRET=your_development_google_client_secret
OUTLOOK_CLIENT_ID=your_development_outlook_client_id
OUTLOOK_CLIENT_SECRET=your_development_outlook_client_secret

# Crypto APIs (optional for development)
CRYPTO_API_KEY=your_development_crypto_api_key

# Development Settings
LOG_LEVEL=debug
RAILS_LOG_TO_STDOUT=true

# Security (relaxed for development)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
FORCE_SSL=false

# Performance
RAILS_MAX_THREADS=5
WEB_CONCURRENCY=1

# Sidekiq Configuration
SIDEKIQ_CONCURRENCY=2
SIDEKIQ_QUEUES=default,mailers,ai_processing,calendar_sync

# Development Tools
PGADMIN_DEFAULT_EMAIL=dev@example.com
PGADMIN_DEFAULT_PASSWORD=development
